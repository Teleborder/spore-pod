extends layout

block content

  .col-sm-6.col-sm-offset-3
    h2.page-header Create an Account
    .well
      form#signup(method='POST', action='/signup')
        .form-group
          label Email
          input.form-control(type='text', name='email')

        .form-group
          label Password
          input.form-control(type='password', name='password')

        button.btn.btn-default.btn-lg.pull-right(type='submit') Sign Up
        .clearfix
