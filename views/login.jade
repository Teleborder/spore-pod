extends layout

block content

  .col-sm-6.col-sm-offset-3
    h1.page-header
      i.fa.fa-sign-in
      | Log In
    .well
      form(action='/login', method='POST')
        .form-group
          label Email
          input.form-control(type='text', name='email')
        .form-group
          label Password
          input.form-control(type='password', name='password')

        button.btn.btn-default.btn-lg.pull-right(type='submit') Login
        .clearfix
